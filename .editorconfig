root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.service]
insert_final_newline = false

[Makefile]
indent_style = tab

[makefile]
indent_style = tab

[*.go]
indent_style = tab
trim_trailing_whitespace = false

[{.gitlab-ci.yml,.travis.yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

